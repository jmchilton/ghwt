{
  "name": "@jmchilton/ghwt",
  "version": "0.1.0",
  "description": "Worktree-centered development task dashboard with Obsidian integration",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "ghwt": "./bin/ghwt.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "setup": "npm run build && npm link",
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "smoke-test": "bash scripts/smoke-test.sh",
    "lint": "eslint . && tsc --noEmit",
    "lint:fix": "eslint . --fix && prettier --write .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "worktree",
    "obsidian",
    "git",
    "dashboard",
    "task-management",
    "ghwt"
  ],
  "author": "John Chilton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmchilton/ghwt.git"
  },
  "homepage": "https://github.com/jmchilton/ghwt#readme",
  "bugs": {
    "url": "https://github.com/jmchilton/ghwt/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "enquirer": "^2.4.1",
    "execa": "^8.0.1",
    "gh-ci-artifacts": "^1.20.0",
    "js-yaml": "^4.1.0",
    "prompt-sync": "^4.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@types/prompt-sync": "^4.2.3",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^3.2.4"
  }
}
